// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id      Int @id //@default(uuid())
  name    String
  price   Float
  image   String
  amount  Int

  @@map("products")
}

model PurchasedProduct {
  id Int @id
  amount Int

  @@map("purchasedProducts")
}